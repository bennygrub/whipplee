%h2= @post.title
%p
  = @post.teaser
%p
  %b Created by:
  = @post.creator_list

%p
  %b Orignal Post:
  = link_to @post.direct

- if !@post.image.blank? 
  %p 
    = image_tag @post.image

- if !@post.video.blank? || !@post.vembed.blank?
  %p= raw @post.vembed
  %p= @post.video

- if !@post.content.blank?
  %p= raw @post.content


= render "favorite_form"

- if current_user 
  - if current_user.admin
    = link_to 'Edit', edit_post_path(@post)
    = link_to 'Back', posts_path
